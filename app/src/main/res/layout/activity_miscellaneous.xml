<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app1"
    tools:context="com.example.admin.pavitrapackaging.MiscellaneousActivity">

    <Button
        android:id="@+id/btBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOKS"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/btSewing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEWING MACHINE"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="90dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btBooks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btAquarium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AQUARIUM"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="159dp"
        android:layout_below="@+id/btSewing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/btBags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BAGS"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btAquarium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />


</RelativeLayout>
