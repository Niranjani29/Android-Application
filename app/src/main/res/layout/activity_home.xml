<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app1"
    android:orientation="vertical"
    android:id="@+id/d1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        tools:context="com.example.admin.pavitrapackaging.HomeActivity">

        <Button
            android:id="@+id/btShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="115dp"
            android:layout_y="195dp"
            android:background="@drawable/circle_button"
            android:text="Shifting"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btAboutUs"
            android:layout_alignStart="@+id/btAboutUs" />

        <Button
            android:id="@+id/btAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="118dp"
            android:layout_y="41dp"
            android:background="@drawable/circle_button"
            android:onClick="gotoNext"
            android:text="About Us"
            android:textColor="#ffffff"
            android:layout_marginTop="39dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btEnquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button"
            android:text="Enquiry"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btShift"
            android:layout_alignStart="@+id/btShift"
            android:layout_marginBottom="29dp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
