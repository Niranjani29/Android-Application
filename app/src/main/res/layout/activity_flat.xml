<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app1"
    tools:context="com.example.admin.pavitrapackaging.FlatActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1BHK"
        android:textColor="#ffffff"
        android:background="@drawable/circle_button"
        tools:layout_editor_absoluteX="128dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/tv"
        android:layout_alignLeft="@+id/btPaintings"
        android:layout_alignStart="@+id/btPaintings" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2BHK"
        android:textColor="#ffffff"
        android:background="@drawable/circle_button"
        tools:layout_editor_absoluteX="128dp"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignBaseline="@+id/bt1"
        android:layout_alignBottom="@+id/bt1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:text="OTHER"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="408dp"
        android:layout_alignBaseline="@+id/btPaintings"
        android:layout_alignBottom="@+id/btPaintings"
        android:layout_alignLeft="@+id/bt2"
        android:layout_alignStart="@+id/bt2" />

    <Button
        android:id="@+id/btPaintings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:text="3BHK"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        tools:layout_editor_absoluteX="133dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_below="@+id/bt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/bt4"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv" />

    <Button
        android:id="@+id/btDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="#ffffff"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Select Type Of House"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />


</RelativeLayout>
